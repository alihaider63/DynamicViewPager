<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/user_dp_cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/user_dp"
            android:layout_width="34dp"
            android:layout_height="34dp"/>

    </com.google.android.material.card.MaterialCardView>


    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/nunito"
        android:maxLines="1"
        android:minLines="1"
        android:text="Ali Haider ali haider haider"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/user_dp_cardView"
        app:layout_constraintStart_toEndOf="@+id/user_dp_cardView"
        app:layout_constraintTop_toTopOf="@+id/user_dp_cardView" />



</androidx.constraintlayout.widget.ConstraintLayout>